<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% if @task.completed? %>
    <i class="far fa-check-square"></i> Task complete!
  <% else %>
    <i class="far fa-square"></i> This task is not completed yet
<% end %>
</p>
<p><%= link_to 'Edit this task', edit_task_path(@task) %> </p>
<p><%= link_to 'Back to list', tasks_path %></p>
